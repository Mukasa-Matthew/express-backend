# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL Configuration
# For production: Set this to your frontend domain (e.g., https://yourdomain.com)
# For multiple frontends: Use comma-separated list (e.g., https://app1.com,https://app2.com)
FRONTEND_URL=https://yourdomain.com
FRONTEND_URLS=https://yourdomain.com,https://www.yourdomain.com

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Email Configuration (for notifications and password resets)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@yourdomain.com

# Cloudflare Turnstile (for bot protection)
TURNSTILE_SECRET_KEY=your-turnstile-secret-key
TURNSTILE_SITE_KEY=your-turnstile-site-key

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Logging
MORGAN_FORMAT=combined

# Rate Limiting (optional - defaults are used if not set)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Security
# Set to 'true' in production to enforce HTTPS
FORCE_HTTPS=false

# Super Admin Configuration (for initial setup)
SUPER_ADMIN_EMAIL=admin@yourdomain.com
SUPER_ADMIN_PASSWORD=change-this-password
